<Window
    x:Class="Samples.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lan="clr-namespace:MultiLanguageManager;assembly=MultiLanguageManager.WPF"
    xmlns:local="clr-namespace:Samples.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <TabControl>
        <TabItem lan:Xaml.Key="txt">
            <StackPanel x:Name="stc">
                <Button lan:Xaml.Key="btn_readInCode" Click="Button_Click" />
            </StackPanel>
        </TabItem>
        <TabItem lan:Xaml.Key="txt2" />
        <TabItem lan:Xaml.Key="txt3" />
    </TabControl>
</Window>
